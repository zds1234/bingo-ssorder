<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="@dimen/fragment_kinds_types_padding_10"
        android:paddingRight="@dimen/fragment_kinds_types_padding_10" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/tab_kinds"
            />

        <TextView
            android:id="@+id/tv_fragment_kinds_compile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_white_text_bg"
            android:paddingBottom="@dimen/fragment_kinds_types_padding_5"
            android:paddingLeft="@dimen/fragment_kinds_types_padding_10"
            android:paddingRight="@dimen/fragment_kinds_types_padding_10"
            android:paddingTop="@dimen/fragment_kinds_types_padding_5"
            android:text="@string/compile" />
    </RelativeLayout>

    <jtemp.bingossorder.widget.xrecyclerview.XRecyclerView
        android:id="@+id/recyclerView"
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></jtemp.bingossorder.widget.xrecyclerview.XRecyclerView>

</LinearLayout>