<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView 
        android:id="@+id/item_small_eat_kinds_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="1111"
        />
    <LinearLayout 
        android:id="@+id/item_standard_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
			<CheckBox 
			    android:id="@+id/item_standard_add_food_checkbox"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:button="@drawable/fragment_mange_kinds_selector"
		        />
            <TextView 
                android:id="@+id/item_standard_add_food_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                />
     </LinearLayout>
</LinearLayout>
